#include <stdio.h>
struct bookinfo {
    int id;
    char title[20];
    char author[20];
    float price;
};
int n=0;
void sortID(struct bookinfo b[], int n) {
    int i, j;
    struct bookinfo temp;
    for (i = 0; i < n - 1; i++) {
    for (j = 0; j < n - 1 - i; j++) {
      if (b[j].id > b[j + 1].id) {
             temp = b[j];
             b[j] = b[j + 1];
             b[j + 1] = temp;
            }
        }
    }
}

void sortPrice(struct bookinfo b[], int n) {
    int i, j;
    struct bookinfo temp;
    for (i = 0; i < n - 1; i++) {
    for (j = 0; j < n - 1 - i; j++) {
        if (b[j].price > b[j + 1].price) {
             temp = b[j];
             b[j] = b[j + 1];
             b[j + 1] = temp;
            }
        }
    }
}

